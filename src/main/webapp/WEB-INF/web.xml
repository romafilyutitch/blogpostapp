<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    Define a display name for your application-->
    <display-name>Blog post app</display-name>

<!--    Define servlet mappings-->
<!--    <servlet>-->
<!--        <servlet-name>PostServlet</servlet-name>-->
<!--        <servlet-class>org.romafill.blogpostapp.servlet.PostServlet</servlet-class>-->
<!--    </servlet>-->

    <!--Define welcome files (the default page to load)-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

<!--    Listener -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>



<!--    Define context parameters (application-wide settings)-->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

<!--    Define error pages-->
    <error-page>
        <error-code>404</error-code>
        <location>/templates/not-found.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/templates/server-error.jsp</location>
    </error-page>

</web-app>